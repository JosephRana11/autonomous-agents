generator client {
  provider             = "prisma-client-py"
  interface            = "asyncio"
  recursive_type_depth = 5
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Agent table model
model Agent {
  id          String    @id // UUID
  name        String
  action      String[]  @default([])
  instance    BigInt
  last_active DateTime?
  created_at  DateTime
  updated_at  DateTime
  deleted_at  DateTime? // Soft deletion field
}

model Trigger {
  id         String      @id
  agent_id   String
  type       TriggerType
  data       Json
  created_at DateTime
  updated_at DateTime
  deleted_at DateTime?
}

enum TriggerType {
  CRON
  TOPIC
}
